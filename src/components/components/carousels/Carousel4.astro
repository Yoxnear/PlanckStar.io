---
//3 Instruction in this component

import { Image } from "astro:assets";

// ↓ Here you can add the images/logos. ❶
import Logo1 from "../../../assets/icons/planckstar.svg";
import Logo2 from "../../../assets/icons/planckstar.svg";
import Logo3 from "../../../assets/icons/planckstar.svg";

// ↓ Then add the logos you imported with an alt description. ❷
const logosRoutes = [
  {
    src: Logo1,
    alt: "Logo 1",
  },
  {
    src: Logo2,
    alt: "Logo 2",
  },
  {
    src: Logo3,
    alt: "Logo 3",
  },
//{
//   src: LogoX,
//   alt: "Logo X",
//}
];
---

<div
  class="relative w-full overflow-hidden border-y border-white/30 py-8 flex items-center not-content"
>
  <div class="w-full">
    <!-- Here you can change the interval time ↓ (seconds). ❸ -->
    <div class=`flex w-[200%] animate-[scroll_5s_linear_infinite]`>
      <div class="flex w-1/2 items-center justify-around">
        {
          logosRoutes.map((logo) => (
            <Image src={logo.src} alt={logo.alt} class="size-16" />
          ))
        }
      </div>
      <div class="flex w-1/2 items-center justify-around">
        {
          logosRoutes.map((logo) => (
            <Image src={logo.src} alt={logo.alt} class="size-16" />
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
