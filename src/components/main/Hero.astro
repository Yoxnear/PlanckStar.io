---
import Button from "../../components/main/Button.astro";
import pkg from "../../../package.json";
import { Image } from "astro:assets";

import Three from "../../assets/icons/threedotjs.svg";
import AstroI from "../../assets/icons/astro.svg";
import Tailwind from "../../assets/icons/tailwindcss.svg";

const version = pkg.version;
---

<section
  class="text-tertiary w-full h-screen grid grid-cols-1 md:grid-cols-2 items-center justify-center pt-20 md:pt-0"
>
  <div
    class="relative flex flex-col items-center justify-center text-center border-t md:border-t-0 border-b md:border-b-0 md:border-r border-tertiary/30 h-full px-12 bg-primary"
  >
    <div id="canvas-container" class="absolute top-0 left-0 w-full h-full z-0">
      <div class="absolute bg-primary/50 w-full h-full"></div>
    </div>
    <h1 class="text-4xl md:text-5xl font-bold z-1">
      UI components for your website
    </h1>
    <p class="text-lg pt-8 z-1">Just copy and paste!</p>

    <div
      class="absolute flex justify-center items-center md:translate-y-0 translate-y-[calc(100%+1px)] bottom-0 right-0 border-b md:border-b-0 border-t border-l border-tertiary/30 bg-quaternary"
    >
      <a
        href="#components"
        class="px-4 py-4 md:px-6 font-light text-shadow-sm md:text-md"
        >Explore</a
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1"
        stroke="currentColor"
        class="size-4 mr-4 md:size-6 md:mr-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.75 17.25 12 21m0 0-3.75-3.75M12 21V3"></path>
      </svg>
    </div>
  </div>

  <div
    class="relative flex items-center justify-center flex-col py-12 md:py-25 w-full border-y border-tertiary/30 md:mt-16 bg-primary"
  >
    <p
      class="absolute text-sm md:text-md top-0 left-0 translate-y-[calc(-100%-1px)] py-4 px-8 border-t border-r border-tertiary/30 bg-quaternary font-light"
    >
      V 0.23.0
    </p>
    <div
      class="absolute top-6 left-6 border-t border-l border-tertiary w-4 h-4"
    >
    </div>
    <div
      class="absolute top-6 right-6 border-t border-r border-tertiary w-4 h-4"
    >
    </div>
    <div
      class="absolute bottom-6 left-6 border-b border-l border-tertiary w-4 h-4"
    >
    </div>
    <div
      class="absolute bottom-6 right-6 border-b border-r border-tertiary w-4 h-4"
    >
    </div>
    <div class="overflow-hidden h-[5.5rem] w-full">
      <div
        id="wordList"
        class="flex flex-col transition-transform duration-700 ease-in-out"
      >
        <div
          class="h-[5.5rem] flex items-center justify-center gap-5 text-5xl md:text-6xl font-bold"
        >
          <AstroI class="h-[80%]"/>
          <span>Astro</span>
        </div>
        <div
          class="h-[5.5rem] flex items-center justify-center gap-4 text-5xl md:text-6xl font-bold"
        >
          <Tailwind class="h-[80%]"/>
          <span>Tailwind</span>
        </div>
        <div
          class="h-[5.5rem] flex items-center justify-center gap-4 text-5xl md:text-6xl font-bold"
        >
          <Three class="h-[80%]"/>
          <span>Three.js</span>
        </div>
      </div>
    </div>

    <Button href="/get-started" text="Get Started" />
  </div>
</section>

<script src="../../scripts/heroTranslate.ts"></script>
<script src="../../scripts/heroGameofLife.js"></script>
